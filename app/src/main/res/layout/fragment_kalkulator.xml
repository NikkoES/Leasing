<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Harga kendaraan OTR"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_harga_otr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_border_edittext"
                android:inputType="number"
                android:padding="10dp"
                android:hint="120.000.000"
                android:textSize="13sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Uang muka/DP (%)"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_uang_muka"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/rounded_border_edittext"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:hint="10"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="%"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Lama Tenor"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_lama_tenor"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/rounded_border_edittext"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:hint="5"
                    android:textSize="13sp" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="tahun"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Bunga pertahun (%)"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_bunga_pertahun"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/rounded_border_edittext"
                    android:inputType="numberDecimal"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:hint="4.8" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="%"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Biaya Asuransi (%)"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_biaya_asuransi"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/rounded_border_edittext"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:hint="5" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="%"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Biaya Provisi (%)"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_biaya_provisi"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="4"
                    android:background="@drawable/rounded_border_edittext"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:hint="0.45" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border_edittext"
                    android:focusable="false"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="%"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Biaya Polis Asuransi"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_biaya_polis_asuransi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_border_edittext"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="13sp"
                android:hint="40.000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Biaya Administrasi"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_biaya_administrasi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_border_edittext"
                android:inputType="number"
                android:padding="10dp"
                android:textSize="13sp"
                android:hint="700.000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Tanggal Mulai"
                android:textColor="@color/softBlack"
                android:textSize="13sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_tanggal_mulai"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/rounded_border_edittext"
                android:focusable="false"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="13sp"
                android:hint="04-03-2020" />

            <Button
                android:id="@+id/btn_hitung"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_border_button"
                android:text="Hitung Cicilan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        ads:adSize="BANNER"
        ads:adUnitId="@string/ad_banner_bawah" />

</LinearLayout>